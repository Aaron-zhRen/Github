@model AdminPortal.Models.OnBorad

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> Applications</h2>
<div class="row">
    <div class="col-lg-8 col-lg-offset-1">
        <div class="form-group">
            <div class="form-group">
                <label>Application</label>
                <select class="form-control col-lg-offset-1"></select>
            </div>
            <div class="form-group">
                <label>Icm</label>
                <select class="form-control  col-lg-offset-1"></select>
            </div>
            <div class="form-group">
                <label>Environment</label>
                <select class="form-control col-lg-offset-1"></select>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-bar-chart-o fa-fw"></i>Counter
                <div class="pull-right">
                    <div class="btn-group">
                        <button type="button" class="btn btn-default btn-danger btn-xs">
                            Add
                        </button>
                    </div>
                </div>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6 col-lg-offset-1">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>CounterType</th>
                                        <th>ThresholdUnit</th>
                                        <th>IsEnable</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><select id="disabledSelect" class="form-control"><option>Type</option></select></td>
                                        <td><input class="form-control"></td>
                                        <td><div class="form-control switch switch-mini"><input type="checkbox" checked /></div></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.col-lg-4 (nested) -->
                    <div class="col-lg-8">
                        <div id="morris-bar-chart"></div>
                    </div>
                    <!-- /.col-lg-8 (nested) -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.panel-body -->
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-bar-chart-o fa-fw"></i> WorkFlow
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="table-responsive">
                            <div class="form-group">
                                <label>Interval</label>
                                <select class="form-control"></select>
                            </div>
                            <div class="form-group">
                                <label>Minutes</label>
                                <select class="form-control"></select>
                            </div>
                            <div class="form-group">
                                <label>Hours</label>
                                <select class="form-control"></select>
                            </div>
                            <div class="form-group">
                                <label>DayofWeek</label>
                                <select class="form-control"></select>
                            </div>
                            <div class="form-group">
                                <label>DayifMounth</label>
                                <select class="form-control"></select>
                            </div>
                        </div>
                        <!--Select-->
                        <div class="form-group">
                            <label>Radio Buttons</label>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked>Hour
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">Day
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="optionsRadios" id="optionsRadios3" value="option3">Week
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="optionsRadios" id="optionsRadios3" value="option3">Mounth
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="optionsRadios" id="optionsRadios3" value="option3">MonthRelative
                                </label>
                            </div>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.col-lg-4 (nested) -->
                    <div class="col-lg-8">
                        <div id="morris-bar-chart"></div>
                    </div>
                    <!-- /.col-lg-8 (nested) -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.panel-body -->
        </div>
        <div class="form-control switch">
            <input type="checkbox" checked />IsEnable
        </div>

        <div class="form-inline">
            <button type="button" class="btn btn-success col-lg-1">Save</button>
            <button type="button" class="btn btn-danger col-lg-offset-1 col-lg-1">Cancle</button>
        </div>
       
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
